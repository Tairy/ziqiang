<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <i class="fa fa-users"></i> 捐赠者列表
    </h1>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-users"></i> 用户管理
      </li>
      <li class="active">
          <i class="fa fa-user"></i> 捐赠者列表
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>姓名</th>
            <th>邮箱</th>
            <th>电话</th>
            <th>地址</th>
            <th>身份</th>
            <th>寄语</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @donors.each do |donor| %>
          <tr>
              <td><%= link_to(donor.name, donor) %></td>
              <td><%= donor.email%></td>
              <td><%= donor.phone %></td>
              <td><%= donor.address %></td>
              <td>
                <%= donor.identify %>
              </td>
              <td>
                <%= donor.wordsto %>
              </td>
              <td><%= link_to '查看', donor , :class => 'btn btn-success btn-sm'%> &nbsp;
                  <%= link_to '编辑', edit_donor_path(donor), :class => 'btn btn-primary btn-sm' %> &nbsp;
                  <%= link_to '删除', donor, method: :delete, data: { confirm: '确认删除？' }, :class=>'btn btn-danger btn-sm'%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= paginate @donors, :outer_window => 2 %>

<%= link_to 'New Donor', new_donor_path %>
