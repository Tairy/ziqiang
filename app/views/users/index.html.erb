<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <i class="fa fa-users"></i> 用户管理
    </h1>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-users"></i> 用户管理
      </li>
      <li class="active">
          <i class="fa fa-user"></i> 用户列表
      </li>
    </ol>
  </div>
</div>


<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>姓名</th>
            <th>性别</th>
            <th>一卡通号</th>
            <th>学号</th>
            <th>状态</th>
            <th>借书数目</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
              <td><%= user.true_name %></td>
              <td><%= user.sex%></td>
              <td><%= user.card_num %></td>
              <td><%= user.student_id %></td>
              <td>
                <%= user.status %>
              </td>
              <td>
                <%= user.borrowed_books.count %>
              </td>
              <td><%= link_to '查看用户', user , :class => 'btn btn-success btn-sm'%> &nbsp;
                  <%= link_to '编辑用户', edit_user_path(user), :class => 'btn btn-primary btn-sm' %> &nbsp;
                  <%= link_to '删除用户', user, method: :delete, data: { confirm: '确认删除？' }, :class=>'btn btn-danger btn-sm'%></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

