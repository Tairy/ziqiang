<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <i class="fa fa-connectdevelop"></i> 活动管理
    </h1>
    <ol class="breadcrumb">
      <li>
        <i class="fa fa-connectdevelop"></i> 活动管理
      </li>
      <li class="active">
          <i class="fa fa-list-ul"></i> 活动列表
      </li>
    </ol>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 cs-add-book-btn">
    <%= link_to '添加活动', new_activity_path , :class => 'btn btn-success btn-sm pull-right'%>
  </div>
</div>
<br>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>活动主题</th>
            <th>开始时间</th>
            <th>结束时间</th>
            <th>活动状态</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @activities.each do |activity| %>
          <tr>
              <td><%= activity.topic %></td>
              <td><%= activity.start_time %></td>
              <td><%= activity.end_time %></td>
              <td></td>
              <td>
                <%= link_to '查看活动', activity , :class => 'btn btn-success btn-sm'%> &nbsp;
                <%= link_to '编辑活动', edit_activity_path(activity), :class => 'btn btn-primary btn-sm' %> &nbsp;
                <%= link_to '删除活动', activity, method: :delete, data: { confirm: '确认删除？' }, :class=>'btn btn-danger btn-sm'%>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>