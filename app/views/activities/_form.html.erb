<%= form_for(@activity) do |f| %>
  <%= render 'error' %>
  <div class="form-group">
    <%= f.label :topic , :value => "活动主题:"%><br>
    <%= f.text_field :topic, :class => "form-control", :placeholder => "活动主题" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, :value => "活动开始时间：" %><br>
    <%= f.text_field :start_time, :class => "form-control", :placeholder => "活动开始时间" %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, :value => "活动结束时间：" %>
    <%= f.text_field :end_time, :class => "form-control",:placeholder => "活动结束时间" %>
  </div>

  <div class="form-group">
    <%= f.label :introduce, :value => "活动介绍" %>
    <%= f.text_field :introduce, :class => "form-control", :placeholder => "活动介绍" %>
  </div>

  <div class="form-group">
    <%= f.submit :class => "btn btn-success btn-block", :value => "添加活动" %>
  </div>
<% end %>
