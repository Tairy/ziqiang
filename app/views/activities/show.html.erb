<header class="bar bar-standard bar-header">
  <a class="icon icon-left-nav pull-left" href="/activities"></a>
  <h1 class="title">物理系自强书社</h1>
</header>
<nav class="bar bar-tab">
  <a class="tab-item" href="/books">
    <span class="icon icon-home"></span>
    <span class="tab-label">书籍</span>
  </a>
  <a class="tab-item" href="/activities" data-transition="slide-in">
    <span class="icon icon-person"></span>
    <span class="tab-label">活动</span>
  </a>
  <a class="tab-item" href="/donors/new" data-transition="slide-in">
    <span class="icon icon-star-filled"></span>
    <span class="tab-label">捐赠</span>
  </a>
</nav>
<div class="content">
  <div class="card">
    <h2><%= @activity.topic %></h2>
    <small class="pull-right" style="color:gray"><%= @activity.start_time.to_formatted_s(:db) %> 至 <%= @activity.end_time.to_formatted_s(:db) %></small>
  </div>
  <div class="card">
    <img src="<%= @activity.post_image%>" alt="" class="activity-image">
  </div>
  <div class="card">
    <%= markdown(@activity.introduce) %>
  </div>
